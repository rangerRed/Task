<Window x:Class="Task2.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task2"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None"
        Title="Window1" Height="150" Width="340">
    <Grid>
        <TextBlock Text="Вы уверены что хотите перезаписать &#10;документ?" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="16" Margin="15"/>
        <Button Width="105" Height="25" Content="Да" FontSize="14" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="30" x:Name="b1" Click="B1_Click"/>
        <Button Width="105" Height="25" Content="Нет" FontSize="14" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="200,0,30,30" x:Name="b2" Click="B2_Click"/>
    </Grid>
</Window>
